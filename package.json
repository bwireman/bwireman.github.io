{
  "name": "bwireman.github.io",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "rm -f index.html && vite",
    "build": "./scripts/build.sh",
    "preview": "vite preview",
    "format": "prettier --plugin-search-dir . --write '{public,src}/**/*.{css,html,ts,js,svelte}'",
    "lint": "eslint --fix --quiet src",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "test": "playwright test",
    "prepare": "husky",
    "dl-resume": "./scripts/dl-resume.sh",
    "update": "npm upgrade"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": false,
    "singleQuote": false,
    "svelteSortOrder": "options-scripts-markup-styles",
    "trailingComma": "none",
    "useTabs": false,
    "tabWidth": 2,
    "semi": false,
    "printWidth": 120,
    "plugins": [
      "prettier-plugin-svelte"
    ],
    "overrides": [
      {
        "files": "*.svelte",
        "options": {
          "parser": "svelte"
        }
      }
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "@fontsource/jetbrains-mono": "^5.1.1",
    "@gleam-lang/highlight.js-gleam": "^1.5.0",
    "@playwright/test": "^1.48.2",
    "@svelte-plugins/viewable": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@tsconfig/svelte": "^5.0.4",
    "@types/eslint__js": "^8.42.3",
    "@types/ua-parser-js": "^0.7.39",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "bulma": "^1.0.2",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.46.0",
    "husky": "^9.1.6",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.7",
    "sass": "^1.80.4",
    "svelte": "^5.1.3",
    "svelte-check": "^4.0.5",
    "svelte-highlight": "^7.7.0",
    "tslib": "^2.8.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.11.0",
    "vite": "^5.4.4"
  },
  "dependencies": {
    "ua-parser-js": "^1.0.39"
  }
}
