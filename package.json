{
  "name": "bwireman.github.io",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "rm -f index.html && vite",
    "build": "./scripts/build.sh",
    "preview": "vite preview",
    "format": "prettier --plugin-search-dir . --write '{public,src}/**/*.{css,html,ts,js,svelte}'",
    "lint": "eslint --fix --quiet src --ext .ts,.js,.svelte",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "test": "playwright test",
    "prepare": "husky"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": false,
    "singleQuote": false,
    "svelteSortOrder": "options-scripts-markup-styles",
    "trailingComma": "none",
    "useTabs": false,
    "tabWidth": 2,
    "semi": false,
    "printWidth": 120,
    "plugins": [
      "prettier-plugin-svelte"
    ],
    "overrides": [
      {
        "files": "*.svelte",
        "options": {
          "parser": "svelte"
        }
      }
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "@fontsource/jetbrains-mono": "^4.5.12",
    "@gleam-lang/highlight.js-gleam": "^1.5.0",
    "@playwright/test": "^1.31.2",
    "@svelte-plugins/viewable": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "@tsconfig/svelte": "^5.0.4",
    "@types/eslint__js": "^8.42.3",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "bulma": "^1.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-svelte": "^2.42.0",
    "husky": "^9.0.11",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.5",
    "sass": "^1.77.8",
    "svelte": "^4.2.18",
    "svelte-check": "^3.8.4",
    "svelte-highlight": "^7.6.1",
    "tslib": "^2.6.3",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.16.0",
    "vite": "^5.3.3"
  },
  "dependencies": {
    "ua-parser-js": "^1.0.38"
  }
}
